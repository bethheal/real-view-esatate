// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  //  No custom output, default path (node_modules/@prisma/client)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  phone  String
  password String
  role Role   @default(BUYER) // temporary default
  createdAt DateTime @default(now())
}

enum Role{
  BUYER
  AGENT
}